<div class="row">
  <div class="medium-8 columns">
    <div class="blogposts-list">
        <h1 class="text-center" id="blogposts-header">Welcome to my Blog.</h1>

        <% @posts.each do |post| %>
          <div class="blogpost-box">
            <%= link_to 'âœ•', post, method: :delete, data: {confirm: "Are you sure?"}, id: "delete-post-button" %>
            <ul class="individual-post">
              </br>
              <li><h2 class="text-center" id="individual-post-header"><%= post.title.split.map(&:capitalize).join(' ') %></h2></li>
              </br>
              <li id="individual-post-image"><%= image_tag post.image.url %></li>
              </br>
              <li id="individual-post-body"><%=simple_format h post.body %></li>
              </br>
              <li id="individual-post-timestamp"><%= post.created_at.strftime("Posted %m/%d/%Y") %></li>
            </ul>
          </div>
          </br>
        <% end %>
    </div>
  </div>
  <div class="medium-4 columns">
    <%= link_to("Create Post", new_blogpost_path, class: "button secondary", id: "create-post-btn") %>
  </div>
</div>
