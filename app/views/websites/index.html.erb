              <li>PostgreSQL Database</li>
              <li>Git Workflow</li>
              <li>Rspec Testing Suite</li>
            </ul>
          </div>
          <div class="content" id="panel21">
            <h3>LiveStats</h3>
            <%= image_tag("livestats.png", size: "300x300", class: "livestats-image") %>
