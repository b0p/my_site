<div class="bg-1">
  <div class="row">
    <div class="medium-9 medium-centered columns">
      <div class="info-box-1">
    
      </div>
    </div>
  </div>
</div>

<div class="bg-2">
  Bio / Specialties / Projects
</div>

<div class="bg-3">
  <div class="row">
    <div class="small-5 small-centered columns message-section text-center">
      <div class="info-box-2">
        <div class="contact-form">
          <h2>Contact</h2>
          <%= form_for [@message] do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>
              </br>
            <%= f.label :email %>
            <%= f.text_field :email %>
              </br>
            <%= f.label :body, "Message" %>
            <%= f.text_area :body, size: "5x5" %>
              </br>
            <%= f.submit "Send Message", class: :button %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
