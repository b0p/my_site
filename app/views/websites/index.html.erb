            <%= image_tag("tomfafardsite.png", size: "300x300", class: "tomfafardsite-image") %>
            <br>
            <br>
            <%= link_to("Demo Site →", "http://tomfafard.herokuapp.com/", class: :button) %>
            <%= link_to("View Code →", "https://github.com/tomfafard/my_site", class: :button) %>
            <br>
            <p>tomfafard.com is my personal website which I use to showcase my works.</p>
            <h5>Technologies Used:</h5>
            <ul>
              <li>Ruby on Rails</li>
              <li>JavaScript</li>
              <li>PostgreSQL Database</li>
              <li>Git Workflow</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="medium-12 medium-centered columns">
      <div class="info-box-3 text-center">
        <div id="specialties-content">
          <h2 id="specialties-header">Specialties</h2>
          <ul id="spec-list-1">
            <li>Ruby on Rails</li>
            <li>JavaScript</li>
            <li>HTML / CSS</li>
            <li>JSON</li>
          </ul>
          <ul id="spec-list-2">
            <li>PostgreSQL</li>
            <li>Zurb Foundation</li>
            <li>Github Workflow</li>
            <li>Rspec / Capybara Testing</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="bg-3">
  <div class="row">
    <div class="small-1 small-centered columns message-section text-center">
      <div class="info-box-4">
        <div class="contact-form">
          <h2 id="contact-header">Contact</h2>
          <%= form_for [@message] do |f| %>
            <%= f.label :name, nil, id: 'name-label' %>
            <%= f.text_field :name %>
              </br>
            <%= f.label :email, nil, id: 'email-label' %>
            <%= f.text_field :email %>
              </br>
            <%= f.label :body, "Message", id: 'body-label' %>
            <%= f.text_area :body, size: "5x5" %>
              </br>
            <%= f.submit "Send Message", class: :button %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <input type="button" class="button secondary" name="adminbtn" id="adminbtn" value="Admin Login" />
</div>



<div class="bg-4">
  <div class="row">
    <div class="small-4 small-centered columns message-section text-center">
      <div class="login-form">
        <h4 id="admin-header">Admin</h4>
        <%= form_for [@login_creds] do |f| %>
          <%= f.label :username, id: 'user-label' %>
          <%= f.text_field :username %>
            </br>
          <%= f.label :password, id: 'pass-label' %>
          <%= f.password_field :password %>
            </br>
          <%= f.submit "Log In", class: :button %>
        <% end %>
      </div>
    </div>
  </div>
</div>
